<%= turbo_frame_tag dom_id(comment) do %>
<p>
  <%=image_tag comment.user.photo_url(:thumb) %>
  <%= comment.user.name %>
</p>

<p>
  <strong>Comment:</strong>
  <%= comment.body %>
</p>
 



<p>
  <%= link_to "Destroy Comment", [comment.article, comment], data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure?"
              } %>
</p>
<% end %>